@import "/utils/wxss/stylesheet.wxss";
page{
  height: 100%;
}
.bookmsg_all{
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.top_msg{
  color: #999999;
  font-size: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.red_cir{
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background-color: red;
}
.green_cir{
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background-color: #0a8463;
}
/* 分割线 */
.line{
width: 100%;
margin-top: 20rpx;
margin-bottom: 20rpx;
border-top:1px #989898 solid;
}
.bookname{
  display: flex;
  flex-direction: row;
}
.button_container{
  float: left;
}
/* 按钮未选中 */
.normal_button{
  background: #999999;
}
/* 按钮选中 */
.checked_button{
  background: #ff0000;
  color: white
}
.chengse_msg,.bookclass{
  display: flex;
  flex-direction: row;
}
.chengse_msg input{
  width:550rpx;
  padding-left:8rpx;
  /* border: 1rpx solid #999; */
}
/* 设置前面的小红点居中 */
.chengse_msg view{
  margin: auto 25rpx;
}
.bookclass select{
  margin-left: 20rpx;
}
.bookclass_msg view{
   margin: auto 25rpx;
   display: inline-block;
}
/* 设置按钮的样式 */
.button_container .btn{
  border-radius: 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-right: 20rpx;
}
button:nth-child(1){
  margin-left: 20rpx;
}
/* 清除浮动 */
.clear:after{
content: "";
display: block;
clear: both;
}
/* 描述书籍 */
.describe_book{
  /* overflow: hidden */
  margin-top:25rpx; 
}
textarea{
  border: 1px solid #f4f4f4;
  border-top: 2px solid #f4f4f4;
  width: 100%;
  padding: 10rpx;
  height: 150rpx;
}
/* 显示价格区域 */
.show_price{
  margin-top: 25rpx;
}
.show_price .input_price{
  margin-top: 15rpx;
  padding: 5rpx 5rpx 5rpx 15rpx;
  border: 1px solid #f4f4f4;
  border-top: 2px solid #f4f4f4;
  height: 2.1rem;
  min-height:2.1rem;
}
/* 联系方式 */
.telphone_msg{
  margin-top: 25rpx;
}
.telphone_msg .input_tel{
  margin-top: 15rpx;
  padding: 5rpx 5rpx 5rpx 15rpx;
  border: 1px solid #f4f4f4;
  border-top: 2px solid #f4f4f4;
  height: 2.1rem;
  min-height:2.1rem;
}

.img_area{
  height: 160rpx;
  width: 100%;
  display: inline-block;
  margin-left: 25rpx;
}
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  border: 3px solid #f0f0f0;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-wrap image{
  width: 150rpx;
  height: 150rpx;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: #2e82ff;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
}
.q-image-remover icon{
  position: absolute;
  left:12rpx;
  bottom:12rpx;
  color:#fff;
}
 
.uploadImgBtn{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 140rpx;
  border: 6rpx solid #f0f0f0;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}
.pf-type{
  margin-left: 20rpx;
}
/* 发布按钮 */
.line_sub{
width: 100%;
margin-top: 1rpx;
margin-bottom:1rpx;
border-top:1px #ffffff solid;
}
form{
  flex: 1;
  /* position: relative; */
}
.submit_btn{
  position: absolute;
  left: 177rpx;
  margin-top: 50rpx;
}
.submit_btn button{
  width: 368rpx;
  height: 80rpx;
  min-height: 80rpx;
  min-width: 368rpx;
  font-size: 34rpx;
}
.box_zhangwei{
  width: 100%;
  height: 200rpx;
}