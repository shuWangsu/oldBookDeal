/* pages/center/center.wxss */
page{
  height:100%;
}
.header{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 350rpx;
  align-items: center;
}
.header .background {
  width: 100%;
  height: 350rpx;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.header .headerImg{
  border-radius: 50%;
  overflow: hidden;
  height: 150rpx;
  width: 150rpx;
  margin-left: 35rpx;
}
